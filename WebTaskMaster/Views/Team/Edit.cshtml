@model WebTaskMaster.Models.Team.TeamEditModel

@{
    ViewData["Title"] = "Edit name and description";
}

<div class="container text-center">
    <div class="row justify-content-center text-dark bg-white rounded">
        <h1 class="col-12 mt-2">Edit name and description</h1>

        <form asp-action="Edit">
            <input hidden="true" asp-for="TeamId" />

            <div class="text-danger col-12" asp-validation-summary="ModelOnly"></div>

            <div class="form-floating my-2">
                <input asp-for="@Model.Name" class="form-control" autocomplete="name" />
                <label asp-for="@Model.Name"></label>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            <div class="form-floating my-2">
                <textarea asp-for="@Model.Description" class="form-control" autocomplete="description"></textarea>
                <label asp-for="@Model.Description"></label>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-3 col-xxl-2 d-grid mb-2">
                <button class="btn btn-primary" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}