@model Manage_tasks_Biznes_Logic.Dtos.Team.TeamAddModel

@{
    ViewData["Title"] = "Add team";
}

<div class="container text-center">
    <div class="row justify-content-center">
        <h1 class="col-12">Add team</h1>
        
        <form asp-action="Add">
            <div class="text-danger col-12" asp-validation-summary="ModelOnly"></div>
            
            <div class="form-floating my-2">
                <input asp-for="@Model.Name" class="form-control" autocomplete="name" aria-required="true" />
                <label asp-for="@Model.Name"></label>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            
            <div class="form-floating my-2">
                <textarea asp-for="@Model.Description" class="form-control" autocomplete="description" aria-required="true"></textarea>
                <label asp-for="@Model.Description"></label>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-3 col-xxl-2 d-grid">
                <button class ="btn btn-primary" type="submit">Add team</button>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}