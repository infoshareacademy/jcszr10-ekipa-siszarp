@using WebTaskMaster.Models.User;
 
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - WebTaskMaster</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/WebTaskMaster.styles.css" asp-append-version="true" />
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.linearicons.com/free/1.0.0/icon-font.min.css">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css" integrity="sha384-b6lVK+yci+bfDmaY1u0zE8YYJt0TZxLEAFyYSLHId4xoVvsrQu3INevFKo+Xir8e" crossorigin="anonymous">
	<link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">

</head>


@if (User.IsInRole("User"))
{

	<div class="container-fluid">
		<div class="row flex-nowrap">
			<div class="sideBarColor col-auto  col-sm-4 col-md-4 col-lg-3 col-xl-2 min-vh-100 d-flex flex-column justify-content-between">
				<div class="sideBarColor p-2">
					<a class="d-flex text-decoration-none mt-1 align-items-center text-white">
						<span class="fs-4 d-none d-sm-inline">Menu </span>
						<p>@User.Identity.Name</p>
					</a>
					<ul class="nav nav-pills flex-column mt-4">
						 
						<li class="nav-item py-2 py-sm-0">
							<a asp-area="" asp-controller="Project" asp-action="Index" class="nav-link text-white" aria-current="page">
								<i class="fs-5 fa-solid fa-folder-tree" style="color: #ffffff;"></i><span class="fs-4 ms-3 d-none d-sm-inline">Project</span>
							</a>
						</li>
						<li class="nav-item py-2 py-sm-0">
							<a asp-area="" asp-controller="Team" asp-action="Index" class="nav-link text-white" aria-current="page">
								<i class="fs-5 fa fa-users"></i><span class="fs-4 ms-3 d-none d-sm-inline">Team</span>
							</a>
						</li>


						<li class="nav-item py-2 py-sm-0 ">
							<a asp-area="" asp-controller="Account" asp-action="Logout" class="nav-link text-white" aria-current="page">
								<i class="fs-5 fa-solid fa-right-from-bracket" style="color: #ffffff;"></i><span class="fs-4 ms-3 d-none d-sm-inline">Logout</span>
							</a>
						</li>
						<li class="nav-item py-2 py-sm-0 ">
							<a asp-area="" asp-controller="Project" asp-action="TestViewToDeleteLetter" class="nav-link text-white" aria-current="page">
								<i class="fs-5 fa-solid fa-right-from-bracket" style="color: #ffffff;"></i><span class="fs-4 ms-3 d-none d-sm-inline">Test</span>
							</a>
						</li>

					</ul>
				</div>

				<div class="dropdown open p-3 nav-pills">
					<button class="btn border border-warning dropdown-toggle" type="button" id="triggerId" data-bs-toggle="dropdown" aria-expanded="false">
						<i></i><span class="ms-2 text-white">User</span>
					</button>
					<div class="dropdown-menu" aria-labelledy="triggerId">
						<a class="dropdown-item " asp-area="" asp-controller="User" asp-action="Details">
							<i class="fa-solid fa-id-card-clip"></i><span class="  ms-2">Profile</span>
						</a>
						@*<a class="dropdown-item " >
					<i class="fa-solid fa-gears"></i><span class="  ms-2">Settings</span>
					</a>*@

					</div>
				</div>

			</div>
			<div class="col-auto col-md-10 min-vh-100 img-background  text-white-85">
				<main role="main" class="pb-3  ">
					<h1>TaskMaster</h1>
					@RenderBody()
				</main>
			</div>
		</div>

	</div>


}
