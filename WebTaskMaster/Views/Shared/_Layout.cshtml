						</li>
						<li class="nav-item">
							<a class="nav-link text-warning" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
						</li>
						<li class="nav-item">

						</li>


					</ul>

				</div>
				<a class="btn btn-primary mx-1 float-right  " asp-area="" asp-controller="Account" asp-action="Login">Login</a>
			</div>


		</nav>


	</header>*@

	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>
}

