@model WebTaskMaster.Models.Task.WebTasksList;
@{
	if (Model.Tasks.Tasks == null)
	{
	}
	else
	{
		@foreach (var task in Model.Tasks.Tasks)
		{
			<div class="container">
				<div class="row task-grid">
					<div class="col d-flex align-items-center justify-content-center mt-3">
						<div class="m-2" >
							<input style="display: none" type="checkbox" class="chckBox chck-@Model.Tasks.Id" value="@task.Id">
						</div>
						@await Component.InvokeAsync("SingleTask", new { taskGuid = task.Id, teamGuid = Model.TeamId })
					</div>
				</div>
			</div>
		}
	}

}


