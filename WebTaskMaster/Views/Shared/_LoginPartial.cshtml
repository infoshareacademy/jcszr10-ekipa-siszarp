@using Microsoft.AspNetCore.Identity
@using WebTaskMaster.Areas.Identity.Data;
@inject SignInManager<CompanyUser> SignInManager
@inject UserManager<CompanyUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link  p-0" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!<img src="~/profile-user-icon-isolated-on-white-background-eps10-free-vector.png" alt="profile_img" width="50" height="50"></a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link  text-dark btn-outline-warning mx-1 ">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="btn btn-outline-warning mx-1" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="btn btn-outline-warning" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>


