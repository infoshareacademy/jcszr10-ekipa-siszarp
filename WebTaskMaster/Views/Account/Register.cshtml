@model WebTaskMaster.Models.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid form-body m-0 py-5">
    <div class="container border-primary rounded-4 pt-2 text-white col-md-4" style=" background-color: #0c162d;">
        <h1 class="text-center pt-5">@ViewData["Title"]</h1>
        <div class="row justify-content-center">
            <div class=" col-auto my-4">
                <form id="registerForm" method="post">
                    <h3 class="text-center">Create a new account.</h3>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating my-2">
                        <input asp-for="@Model.FirstName" class="form-control" autocomplete="firstName" aria-required="true" />
                        <label asp-for="@Model.FirstName" class="form-label"></label>
                        <span asp-validation-for="@Model.FirstName" class="invalid-feedback text-danger"></span>
                    </div>
                    <div class="form-floating my-2">
                        <input asp-for="@Model.LastName" class="form-control" autocomplete="LastName" aria-required="true" />
                        <label asp-for="@Model.LastName" class="form-label"></label>
                        <span asp-validation-for="@Model.LastName" class="invalid-feedback text-danger"></span>
                    </div>
                    <div class="form-floating my-2">
                        <input asp-for="@Model.Email" class="form-control" autocomplete="email" aria-required="true" />
                        <label asp-for="@Model.Email" class="form-label"></label>
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating my-2">
                        <input asp-for="@Model.Password" class="form-control" aria-required="true" />
                        <label asp-for="@Model.Password" class="form-label"></label>
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating my-2">
                        <input asp-for="@Model.ConfirmPassword" class="form-control"  aria-required="true" />
                        <label asp-for="@Model.ConfirmPassword" class="form-label"></label>
                        <span asp-validation-for="@Model.ConfirmPassword" class="invalid-feedback text-danger"></span>
                    </div>

                    @if (Model is not null && Model.RegistrationFailed)
                    {
                        if (Model.EmailAlreadyInUse)
                        {
                            <div>
                                <p class="text-danger">This email already has an account assigned to it.</p>
                            </div>
                        }

                        if (!Model.PasswordsAreEqual)
                        {
                            <div>
                                <p class="text-danger">Password and repeat password fields must have the same value.</p>
                            </div>
                        }
                    }

                    <button id="registerSubmit" type="submit" class="mt-3 btn-register text-white">Register</button>
                    <div class="my-3 text-center">
                        <p class="text-light-emphasis">
                            Already have an account? <a asp-action="Login">Sign in</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}