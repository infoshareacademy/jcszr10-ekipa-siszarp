@model WebTaskMaster.Models.Project.ProjectCreateModel

@{
    ViewData["Title"] = "Create new project";
}

<div class="container text-center">
    <div class="row justify-content-center text-dark bg-white rounded">
        <h1 class="col-12">@ViewData["Title"]</h1>

        @if (Model.AvailableTeams?.Count > 0)
        {
            <form asp-action="Create">
                <div class="text-danger col-12" asp-validation-summary="ModelOnly"></div>

                <div class="form-floating my-2">
                    <input asp-for="@Model.Name" class="form-control" autocomplete="name" aria-required="true" />
                    <label asp-for="@Model.Name"></label>
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="form-floating my-2">
                    <textarea asp-for="@Model.Description" class="form-control" autocomplete="description" aria-required="true"></textarea>
                    <label asp-for="@Model.Description"></label>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>

                <div class="form-floating my-2">
                    <select asp-for="@Model.TeamId" class="form-select">
                        @foreach (var team in Model.AvailableTeams!)
                        {
                            <option value="@team.TeamId">@team.Name</option>
                        }
                    </select>
                    <label asp-for="@Model.AvailableTeams"></label>
                    <span asp-validation-for="@Model.TeamId" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-3 col-xxl-2 d-grid mb-2">
                    <button class="btn btn-primary" type="submit">Create new project</button>
                </div>
            </form>
        }
        else
        {
            <div class="col-12 my-3">
                <p class="fs-5">You cannot create a project because you are not the leader of any team.</p>
                <p class="fs-5">If you want to create a project, add your own team first.</p>
            </div>

            <div class="col-12 col-md-3 col-xxl-2 d-grid mb-2">
                <a class="btn btn-primary" asp-controller="Team" asp-action="Add">Add team</a>
            </div>
        }
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}